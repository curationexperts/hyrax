<h4>Monthly user activity (past 12 months)</h4>
<hr />

<table class="table table-striped">
  <thead>
  <tr>
    <th>&nbsp;</th>
    <% @month_names.each do |name| %>
       <th><%= name %></th>
    <% end %>
  </tr>
  </thead>
  <tbody>
  <% if @pageviews %>    
    <tr>
      <td><b>Collection Home Page Views</b></td>
       <% @month_names.each do |name| %>
         <td><%= @pageviews.month(name.to_date) %></td>
       <% end %>
    </tr>
  <% end %>
  <% if @work_page_views %>
    <tr>
      <td><b>Views of Works</b></td>
        <% @month_names.each do |name| %>
         <td><%= @work_page_views.month(name.to_date) %></td>
       <% end %>
    </tr>
  <% end %>
   <% if @downloads %>
    <tr>
      <td><b>Downloads of Works</b></td>
        <% @month_names.each do |name| %>
         <td><%= @downloads.month(name.to_date) %></td>
       <% end %>
    </tr>
  <% end %>
  
  </tbody>
</table>
