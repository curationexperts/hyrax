  <tbody>
  <% if @collections.any? %>
    <% @collections.each do |collection| %>
    <tr>
      <td><%= collection.try(:pageTitle) %></td>
      <td><%= collection.try(:pageviews) %></td>
      <td></td>
    </tr>
    <% end %>
  <% end %>
  </tbody>
</table>