<h4>Files</h4>
<hr />

<table class="table table-striped">
  <thead>
    <tr>
      <th>File Name</th>
      <th>Downloads</th>
    </tr>
  </thead>
  <tbody>
    <% @top_downloads.each do |download| %>
      <tr>
        <td><%= download[2] %></td>
        <td><%= download[1] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="pull-right">
  <%= paginate @top_downloads %>
</div>
