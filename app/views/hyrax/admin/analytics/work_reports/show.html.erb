<% provide :page_title, "Work Report" %>

<% provide :page_header do %>
  <h1><span class="fa fa-bar-chart" aria-hidden="true"></span> <%= "Work Report" %></h1>
  <%= link_to 'Return to Work Reports', admin_analytics_work_reports_path, class: "btn btn-primary pull-right" %>
<% end %>

<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2 class="panel-title">Customize Work Report:</h2>
      </div>
      <div class="panel-body">
        <%= render "hyrax/admin/analytics/date_range_form", redirect_path: hyrax.admin_analytics_work_report_path(@document.id) %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="work-reports">
    
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="col-sm-10">
            <h3><%= @document %></h3>
          </div>
          <div class="col-sm-2">
            <%= link_to 'View Work', [main_app, @document], class: "btn btn-default pull-right" %>
          </div>
        </div>

        <div class="panel-body">
          <div class="row">
            <div class="col-xs-12 col-md-5">
              <p>Deposited by <b><%= @document.depositor %></b> on <b><%= @document.date_uploaded.strftime("%Y-%m-%d") %></b></p>
              <p>Work type: <b><%= @document.human_readable_type %></b></p>
              <p>Resource type: <b><%= @document.resource_type.join(", ") %></b></p>
            </div>
            <div class="col-xs-12 col-md-5">
              <p>Status: <b><%= @document.workflow_state %></b></p>
              <p>Visibility: <b><%= @document.visibility %></b></p>
            </div>
            <div class="col-xs-12 col-md-2">
  
            </div>
          </div>
          <h3 class="text-center"> Work Report</h3>
          <%= render "summary" %>
          <%= render 'monthly_summary' %>
         
          <% unless @files.nil? %>
            <%= render "work_files" %>
            <%= render "work_counts" %>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
