<h4>Top Works</h4>
 <hr />
 
  <table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Work Title</th>
        <th>Views</th>
        <th>Downloads</th>
      </tr>
    </thead>
    <tbody>
      <% @top_works.each do |work| %>
        <% document = ::SolrDocument.find(work[0]) rescue document = nil %>
        <% if document %>
          <tr>
            <td><%= work[0] %></td>
            <td><%= link_to document, admin_analytics_work_report_path(work[0]) %></td>
            <td><%= work[1] %></td>
            <td><%= Hyrax::Analytics.downloads_for_id(work[0]).range(@start_date, @end_date) %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

<div class="pull-right">
  <%= paginate @top_works %>
</div>