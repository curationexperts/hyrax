<h4>Top Works</h4>
<hr />

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Work Title</th>
        <th>ID</th>
        <th>Work Page Views</th>
        <th>File Set Downloads</th>
      </tr>
    </thead>
    <tbody>
      <% @top_works.each do |work| %>
        <% document = ::SolrDocument.find(work[0]) rescue document = nil %>
          <tr>
           <% if document %>
            <td><%= link_to document, admin_analytics_work_report_path(work[0]) %></td>
           <% else %>
            <td><i>Work deleted</i></td>
           <% end %>
            <td><%= work[0] %></td>
            <td><%= work[1] %></td>
            <td>
              <% match = @top_downloads.detect {|a,b| a == work[0]} %>
              <%= match ? match[1] : 0 %>
            </td>
          </tr>       
      <% end %>
    </tbody>
  </table>

<div class="pull-right">
  <%= paginate @top_works %>
</div>